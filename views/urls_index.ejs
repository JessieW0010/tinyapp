<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>

<% include partials/_header %>

<body>
  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Date/ Time Created</th>
          <th scope="col">Visits</th>
          <th scope="col">Unique Visits</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let obj in urls) { %>
          <tr>
            <!--short URL-->
            <td><a href="/u/<%= obj %>"><%= obj %></a></td>
            <!--long URL-->
            <td><%= urls[obj].longURL %></td>
            <!--Date Created-->
            <td><%= urls[obj].date %></td>
            <!--Times Visited-->
            <td><%= urls[obj].numVisited %></td>
            <!--Unique Visits-->
            <td><%= urls[obj].browser.length %></td>
            <!--Edit URL, redirects to url/shortURL-->
            <form method="POST" action="/urls/<%= obj %>">
              <td><button class="btn btn-outline-primary">Edit</button></td></form>
            <!--Delete URL, redirects to updated urls/-->
            <form method="POST" action="/urls/<%= obj %>/delete">
            <td><button class="btn btn-outline-danger">Delete</button></td></form>
          </tr>
        <%} %>
      </tbody>
    </table>
  </main>
  <!-- Bootstrap JS -->